{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Express App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/server.ts",
      "runtimeArgs": ["--require", "ts-node/register/transpile-only", "-r", "tsconfig-paths/register"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
